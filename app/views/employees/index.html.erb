

<h3>Employees List</h3>

<table class = "table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Designation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr class="table-row">
        <td><%= employee.name %></td>
        <td><%= employee.age %></td>
        <td><%= employee.gender %></td>
        <td><%= employee.designation %></td>
        <td><%= link_to 'Show', employee, class:"show action" %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee),class:"edit action" %></td>
        <td><%= link_to 'Delete', employee, method: :delete, data: { confirm: 'Do you want to delete?' }, class:"delete action" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Employee', new_employee_path, class:"btn btn-success" %>
